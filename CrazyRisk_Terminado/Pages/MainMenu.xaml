<Page x:Class="CrazyRisk.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Menú Principal">

    <Grid Background="#1E1E2F">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">

            <TextBlock Text="Crazy Risk" 
                       Foreground="White" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       TextAlignment="Center" 
                       Margin="0,0,0,20"/>

            <Button Content="Crear partida" 
                    Height="40" FontSize="16" 
                    Background="#3A8DFF" Foreground="White" 
                    Margin="0,0,0,10"
                    Click="btnCrear_Click"/>

            <Button Content="Unirse a partida" 
                    Height="40" FontSize="16" 
                    Background="#FF6347" Foreground="White" 
                    Margin="0,0,0,10"
                    Click="btnUnirse_Click"/>

            <Button Content="Salir" 
                    Height="40" FontSize="16" 
                    Background="Gray" Foreground="White" 
                    Click="btnSalir_Click"/>
        </StackPanel>
    </Grid>
</Page>
