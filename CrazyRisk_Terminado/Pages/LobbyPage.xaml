<Page x:Class="CrazyRisk.Pages.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Lobby">

    <Grid Background="#1E1E2F">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">

            <TextBlock Text="Lobby - Jugadores conectados" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       TextAlignment="Center" 
                       Margin="0,0,0,20"/>

            <ListBox x:Name="lstJugadores" 
                     Height="150" 
                     FontSize="16" 
                     Margin="0,0,0,20"/>

            <Button x:Name="btnIniciar" 
                    Content="Iniciar partida" 
                    Height="40" FontSize="16" 
                    Background="#28A745" Foreground="White" 
                    Margin="0,0,0,10"
                    Click="btnIniciar_Click"
                    Visibility="Collapsed"/>

            <Button Content="Regresar" 
                    Height="40" FontSize="16" 
                    Background="Gray" Foreground="White" 
                    Click="btnRegresar_Click"/>
        </StackPanel>
    </Grid>
</Page>
