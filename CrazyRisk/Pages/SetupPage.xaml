<Page x:Class="CrazyRisk.Pages.SetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Configuración">

    <Grid Background="#2A2A3D">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- Título dinámico (servidor o cliente) -->
            <TextBlock x:Name="lblModo" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       TextAlignment="Center" 
                       Margin="0,0,0,15"/>

            <!-- Alias -->
            <TextBlock Text="Alias del jugador:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="txtAlias" FontSize="16" Height="35" Margin="0,0,0,15"/>

            <!-- IP solo visible si es cliente -->
            <TextBlock x:Name="lblIP" Text="IP del servidor:" Foreground="White" FontSize="14" Margin="0,0,0,5" Visibility="Collapsed"/>
            <TextBox x:Name="txtIP" FontSize="16" Height="35" Margin="0,0,0,15" Visibility="Collapsed"/>

            <!-- Tropas iniciales -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock Text="Tropas iniciales:" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                <TextBox x:Name="txtTropas" Text="40" Width="50" Height="25" FontSize="14" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Botones -->
            <Button Content="Confirmar" 
                    Background="#3A8DFF" 
                    Foreground="White" 
                    Height="40" 
                    FontSize="16" 
                    Margin="0,0,0,10"
                    Click="btnConfirmar_Click"/>

            <Button Content="Regresar" 
                    Background="Gray" 
                    Foreground="White" 
                    Height="40" 
                    FontSize="16" 
                    Click="btnRegresar_Click"/>

        </StackPanel>
    </Grid>
</Page>
